<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="meetshaus.landingpage">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <h2>Introduction:</h2>
        
        <div id="introduction" tal:content="structure context/introduction" />

        <div id="frontpage-introduction">
            <div tal:attributes="data-tile string:${context/absolute_url}/@@vwc.tiles.richtext/frontpageintroduction" />
        </div>
        
        <section id="content-core">
        <div class="row">
            <div class="col-span-4">
                <div class="splashbox splash-words">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/wordsbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-span-4">
                <div class="splashbox splash-adwords">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/adwordsbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-span-4">
                <div class="splashbox splash-social">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/socialbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="visualClear"><!-- --></div>
        </div>
        </section>
        <div class="visualClear">&nbsp;</div>

        <section id="content-blog-listing">
            <div id="blog-preview-listing"
                tal:condition="view/has_blogentries">
                <tal:entries tal:repeat="item view/blogentries">
                    <article tal:define="count repeat/item/number"
                         class="blogEntry">
                        <header>
                            <span class="documentModified"
                                tal:define="date python:toLocalizedTime(item.EffectiveDate());">
                                <span tal:content="date">effective date</span>
                            </span>
                            <h2>
                                <a href="" tal:attributes="href item/getURL"
                                    tal:content="item/Title">
                                    Title</a>
                            </h2>
                        </header>
                        <p class="lead"
                            tal:condition="item/Description">
                            <span tal:replace="item/Description" />
                        </p>
                        <tal:block tal:define="count repeat/item/number;">
                            <div tal:condition="python:count == 1" class="entry-body">
                                <div tal:content="structure item/text/output" />
                            </div>
                        </tal:block>
                        <div class="blog-actions">
                            <div class="row" tal:define="item_obj item/getObject">
                              <div class="col-span-8">
                                <span tal:define="categories item/Subject|nothing"
                                      tal:condition="categories"
                                      class="muted">
                                  Abgelegt unter:
                                  <span tal:repeat="category categories">
                                    <a href=""
                                       class="link-category"
                                       rel="tag"
                                       tal:content="category"
                                       tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${category}">
                                      Category
                                    </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                                  </span>
                                </span>
                              </div>
                                <div class="col-span-4">
                                    <div class="blogEntryReadMore pull-right">
                                             <a href=""
                                                class="btn btn-primary"
                                                i18n:translate=""
                                                tal:attributes="href item/getURL">
                                                    Artikelansicht
                                             </a>
                                    </div>
                                </div>
                                <div class="visualClear"><!-- --></div>
                            </div>
                        <div class="visualClear"><!-- --></div>
                        </div>
                        <hr>
                    </article>
                </tal:entries>
            </div>
        </section>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
