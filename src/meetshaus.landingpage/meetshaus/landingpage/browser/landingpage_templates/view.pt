<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="meetshaus.landingpage">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <h2>Introduction:</h2>

        <div id="introduction" tal:content="structure context/introduction" />

        <div id="frontpage-introduction">
            <div tal:attributes="data-tile string:${context/absolute_url}/@@vwc.tiles.richtext/frontpageintroduction" />
        </div>

        <section id="content-core">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <div class="splashbox splash-words">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/wordsbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="splashbox splash-adwords">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/adwordsbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="splashbox splash-social">
                    <div class="splashbox-body">
                        <div class="splashbox-content"
                            tal:content="structure context/socialbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="visualClear"><!-- --></div>
        </div>
        </section>
        <div class="visualClear">&nbsp;</div>

        <section id="content-blog-listing">
            <div id="blog-preview-listing"
                tal:condition="view/has_blogentries">

                <div class="blogentry-list" tal:define="item view/latest_blogentry">
                  <div class="blogentry-list-item">
                    <div class="row">
                      <div class="col-xs-12 col-sm-3">
                        <div class="blogentry-header visible-xs-block">
                            <h2 class="blogentry-title">
                              <a tal:attributes="href item/getURL" tal:content="item/Title" />
                            </h2>
                        </div>
                        <div class="blogentry-aside" id="blogentry-aside">
                          <div class="blogentry-aside-section" tal:define="date python:toLocalizedTime(item.EffectiveDate());">
                              <div class="h6 blogentry-aside-title">Verfasst am</div>
                              <p class="blogentry-aside-text" tal:content="date">effective date</p>
                          </div>
                          <div class="blogentry-aside-section" tal:define="categories item/Subject|nothing"
                                tal:condition="categories">
                              <div class="h6 blogentry-aside-title">Abgelegt unter</div>
                              <p>
                              <span tal:repeat="category categories">
                                <a href=""
                                   class="blogentry-aside-category"
                                   rel="tag"
                                   tal:content="category"
                                   tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${category}">
                                  Category
                                </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                              </span>
                              </p>
                          </div>
                          <div class="blogentry-aside-section"
                            tal:define="item_uid item/UID">
                            <div class="h6 blogentry-aside-title">Reading Time:</div>
                            <p class="blogentry-aside-text"><span tal:replace="python:view.reading_time(item_uid)" /> <span i18n:translate="">minutes</span></p>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-9">
                        <div class="blogentry">
                          <div class="blogentry-header hidden-xs">
                            <h2 class="blogentry-title">
                              <a tal:attributes="href item/getURL" tal:content="item/Title" />
                            </h2>
                          </div>

                          <p class="blogentry-abstract" tal:condition="item/Description">
                            <span tal:content="item/Description">Desc</span>
                          </p>

                           <div class="blogentry-body">
                               <span tal:replace="structure item/text/output" />
                           </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

            <hr>

            <div class="app-frontpage-actionbar text-center">
                <a class="btn btn-default" tal:attributes="href string:${view/portal_url}/themen">
                 Weitere Themen durchstöbern
                </a>
                <a class="btn btn-primary" tal:attributes="href string:${view/portal_url}/blog">
                    Ältere Beitrage zeigen
                </a>
            </div>
            </div>
        </section>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
