<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <header class="page-header">
    <h1 tal:content="context/Title">Title inserted here</h1>
  </header>

  <p class="lead" tal:condition="context/Description"
    tal:content="context/Description" />

    <div class="app-list-filter">
        <ul class="nav nav-pills nav-justified" id="filters">
            <li class="active"><a href="#" data-filter="*">show all</a></li>
            <li><a href="#" data-filter=".metal">metal</a></li>
            <li><a href="#" data-filter=".transition">transition</a></li>
            <li><a href="#" data-filter=".alkali, .alkaline-earth">alkali and alkaline-earth</a></li>
            <li><a href="#" data-filter=":not(.transition)">not transition</a></li>
            <li><a href="#" data-filter=".metal:not(.transition)">metal but not transition</a></li>
        </ul>
    </div>

    <section tal:condition="view/has_links"
        class="row app-list-tile"
        id="link-container">
    
        <tal:block tal:repeat="item view/contained_links">
            <article class="col-xs-12 col-sm-3 tilebox">
              <h3 tal:attributes="class python:'sized ' + view.random_size()">
                <a href=""
                  tal:attributes="href item/getRemoteUrl"
                  tal:content="item/Title" />
              </h3>
              <p class="discreet" tal:content="item/Description" />
            </article>
        </tal:block>
    
    </section>
    
  </metal:content-core>
</metal:main>

</body>
</html>

