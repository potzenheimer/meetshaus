<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rgd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
  
    <h1 class="documentFirstHeading">
      <a href="" tal:define="parent view/parent_info"
        tal:condition="parent"
        tal:attributes="href parent/absolute_url">Blog</a>
    </h1>
  
  <div id="blogentry-view"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">
        
        <h2 class="blogentry-title" tal:content="context/Title" />
        
        <blockquote tal:condition="context/Description">
            <p><em tal:content="context/Description">Desc</em></p>
        </blockquote>
        
        <div tal:content="structure context/text/output" />
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        
        <div tal:define="date python:toLocalizedTime(context.EffectiveDate());"
            class="documentByLine">
            <span class="documentModified">Verfasst am <span tal:content="date">effective date</span></span>
            <span class="documentAuthor">
                <tal:block tal:condition="context/Creator"
                    tal:define="author python:context.portal_membership.getMemberInfo(context.Creator())">
                    von
                  <span tal:content="python:author and author['fullname'] or context.Creator()">
                     Author
                  </span>
                </tal:block>
            </span>
        </div>
        
        <div tal:replace="structure provider:plone.belowcontentbody" />
        
        <div tal:condition="view/parent_info">
            <tal:block tal:define="parent view/parent_info">
                <div class="parent-link">
                    <a href="" class="btn small"
                        tal:attributes="href parent/absolute_url">
                        Zur&uuml;ck zur &Uuml;bersicht Blogbeitr&auml;ge</a>
                </div>
            </tal:block>
        </div>
        
  </div>
  </metal:content-core>
</metal:main>

</body>
</html>

