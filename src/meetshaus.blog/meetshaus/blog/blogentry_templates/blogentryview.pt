<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rgd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <h1 class="documentFirstHeading">
      <a href="" tal:define="parent view/parent_info"
        tal:condition="parent"
        tal:attributes="href parent/absolute_url">Blog</a>
    </h1>

  <div class="blogentry-view" id="content-core"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

    <div class="blogentry-header">
      <h2 class="blogentry-title" tal:content="context/Title" />
    </div>

    <p class="blogentry-abstract" tal:condition="context/Description">
        <span tal:content="context/Description">Desc</span>
    </p>
    <div class="blogentry-body">
        <div tal:replace="structure context/text/output" />
    </div>
        <div tal:condition="view/parent_info">
            <tal:block tal:define="parent view/parent_info">
                <div class="pull-right parent-link">
                    <a href="" class="btn btn-small btn-primary"
                        tal:attributes="href parent/absolute_url">
                        Zur&uuml;ck zur &Uuml;bersicht Blogbeitr&auml;ge</a>
                </div>
            </tal:block>
        </div>
  </div>
  <div tal:replace="structure provider:plone.belowcontentbody" />
  </metal:content-core>
</metal:main>

</body>
</html>

