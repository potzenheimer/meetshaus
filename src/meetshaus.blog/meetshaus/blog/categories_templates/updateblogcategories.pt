<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="meetshaus.blog">

<head>
    <metal:block metal:fill-slot="head_slot">
        <link rel="stylesheet"
            tal:attributes="href string:${context/@@plone_portal_state/portal_url}/++resource++hph.lectures/medium-editor.css" />
        <script type="text/javascript" src="test.js"
            tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++hph.lectures/medium-editor.js"></script>
    </metal:block>
</head>

<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="row">
        <div class="app-item-editable">
            <h1 i18n:translate="">Edit field content</h1>

            <div class="app-field-editable">
                <div class="editable" data-appui="content-editable"
                    tal:content="view/getFieldData">
                    Editable Content Section
                </div>
            </div>
            <div class="app-item-editable-actions">
                <form class="app-form js-form js-form-hidden"
                    method="post" role="form"
                    data-appui="content-editable-form"
                    tal:attributes="action request/URL">
                    <textarea class="form-control" id="content-editable-form-body"
                        name="content-editable-form-body">
                        {{ text area }}
                    </textarea>
                    <input class="form-control" id="field-name"
                        type="text" name="field-name"
                        tal:attributes="value view/getFieldname">
                    <span tal:replace="structure context/@@authenticator/authenticator"/>
                    <button class="btn btn-primary"
                            name="form.button.Submit"
                            id="form.button.Submit"
                            i18n:translate="">Save changes</button>
                    <a class="btn btn-primary" href="#save"
                        data-appui="content-editable-save"
                        <a tal:attributes="href string:${context/absolute_url}/lecture-editor-save;
                                        data-appui-target-url string:${context/absolute_url}/lecture-editor-save">
                        Save changes</a>
                </form>
            </div>
            <script>
                // Medium editor
                var $editor = new MediumEditor('.editable', {
                    anchorInputPlaceholder: 'Type a link',
                    buttons: ['bold', 'italic', 'anchor', 'header1', 'header2', 'quote', 'unorderedlist']
                });
                $('form[data-appui="content-editable-form"]').on('submit', function (e) {
                    e.preventDefault();
                    var $contentObj = $editor.serialize();
                    $("#content-editable-form-body").val($contentObj['element-0'].value);
                    this.submit();
                });
            </script>
        </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

