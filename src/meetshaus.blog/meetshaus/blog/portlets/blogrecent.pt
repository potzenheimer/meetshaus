<div class="splashbox"
    id="splashbox-blog-recent"
    i18n:domain="mth.blog.portlets">

    <div class="splashbox-content">
        <h3 i18n:translate="">Last entries</h3>
    <div id="splashbox-blog-recent-content">
    <tal:block define="plone_view context/@@plone;"
        repeat="item view/items">
        <div class="blogEntry">
            <h5 class="blogEntryTitle"
                  tal:content="python:plone_view.toLocalizedTime(item.ModificationDate)"
                  >23.05.2010</h5>
            <p class="blogEntryDescription">
            <span tal:replace="item/pretty_title_or_id" />
            <a tal:attributes="href python:view.item_url(item)" class="link-more">
                mehr&hellip;
            </a>
            </p>
        </div>
    </tal:block>
    </div>
    </div>
</div>
