<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="meethaus.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <header class="page-header">
      <h1 tal:content="context/Title" />
    </header>

    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <div id="blog-view" tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                    Batch python:modules['Products.CMFPlone'].Batch;
                                    b_size python:5;b_start python:0;b_start request/b_start | b_start;">

        <tal:entries tal:define="batch view/batch">
            <div class="blogEntry" tal:repeat="item batch">
                <span class="documentModified"
                    tal:define="date python:toLocalizedTime(item.EffectiveDate());">
                    <span tal:content="date">effective date</span></span>
                <h2>
                    <a href="" tal:attributes="href item/getURL"
                        tal:content="item/Title">
                        Title</a>
                </h2>

                <div class="entryDescription lead"
                    tal:condition="item/Description">
                    <span tal:content="item/Description" />
                </div>

                <tal:block tal:define="count repeat/item/number;
                                       bodytext item/text/output;
                                       item_obj item/getObject;
                                       rawtext item_obj/@@text-transform/text/text/plain">
                    <div tal:condition="python:count == 1" class="entry-body">
                        <div tal:content="structure item/text/output" />
                    </div>
                    <div tal:condition="python:count > 1"
                        class="entry-body"
                        tal:define="richtext python:context.restrictedTraverse('@@plone').cropText(rawtext, 320, '[...]')">
                        <p><span tal:replace="richtext" />
                            <a href="" tal:attributes="href item/getURL">weiterlesen</a>
                        </p>
                    </div>
                </tal:block>

                <div class="blog-actions">
                <div class="row" tal:define="item_obj item/getObject">
                  <div class="col-xs-12 col-sm-8">
                    <span tal:define="categories item/Subject|nothing"
                          tal:condition="categories"
                          class="text-muted">
                      Abgelegt unter:
                      <span tal:repeat="category categories">
                        <a href=""
                           class="link-category"
                           rel="tag"
                           tal:content="category"
                           tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${category}">
                          Category
                        </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                      </span>
                    </span>
                  </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="blogEntryReadMore pull-right">
                                 <a href=""
                                    class="btn btn-primary"
                                    i18n:translate=""
                                    tal:attributes="href item/getURL">
                                        Artikelansicht
                                 </a>
                        </div>
                    </div>
                    <div class="visualClear"><!-- --></div>
                </div>
                <div class="visualClear"><!-- --></div>
                </div>
                <hr>
            </div>
          <div metal:use-macro="context/batch_macros/macros/navigation" />
        </tal:entries>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

