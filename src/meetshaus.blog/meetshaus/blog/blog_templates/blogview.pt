<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rgd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
  
    <h1 class="documentFirstHeading" tal:content="context/Title" />
    <p class="documentDescription" tal:content="context/Description" />

    <div id="blog-view" tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                    Batch python:modules['Products.CMFPlone'].Batch;
                                    b_size python:5;b_start python:0;b_start request/b_start | b_start;">
                                    
        <tal:entries tal:define="batch view/batch">
            <div class="blogEntry" tal:repeat="item batch">
                <h2>
                    <a href="" tal:attributes="href item/getURL"
                        tal:content="item/Title">
                        Title</a>
                </h2>
                <div tal:define="date python:toLocalizedTime(item.EffectiveDate());"
                    class="documentByLine">
                    <div class="row">
                        <div class="cell position-0 width-1:2">
                            <span class="documentModified"><span tal:content="date">effective date</span></span>
                            <span tal:define="categories item/Subject|nothing"
                                  tal:condition="categories">
                              &middot;
                              <span tal:repeat="category categories">
                                <a href=""
                                   class="link-category"
                                   rel="tag"
                                   tal:content="category"
                                   tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${category}">
                                  Category
                                </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                              </span>
                            </span>
                        </div>
                        <div class="cell position-1:2 width-1:2">
                            <span class="documentAuthor">
                                <tal:block tal:condition="item/Creator"
                                    tal:define="author python:context.portal_membership.getMemberInfo(item.Creator())">
                                    Posted by<br />
                                  <span tal:content="python:author and author['fullname'] or item.Creator()">
                                     Author
                                  </span>
                                </tal:block>
                            </span>
                        </div>
                        <div class="visualClear"><!-- --></div>
                    </div>
                    <div class="visualClear"><!-- --></div>
                </div>
                
                <div tal:content="structure item/Description" />
                
                <div class="row" id="blogEntryActions">
                    <div class="cell position-0 width-1:2">
                        <div tal:condition="python:view.commentsEnabled(item.getObject())"
                            class="blogEntryComments">
                            <a href="" tal:attributes="href item/getURL">
                                <span tal:replace="python:view.commentCount(item.getObject())" />
                                <span i18n:translate="">Comments</span>
                            </a>
                        </div>
                    </div>
                    <div class="cell position-1:2 width-1:2">
                        <div class="blogEntryReadMore">
                                 <a href=""
                                    class="link-blog-more"
                                    i18n:translate=""
                                    tal:attributes="href item/getURL">
                                        Read more &raquo;
                                 </a>
                        </div>
                    </div>
                    <div class="visualClear"><!-- --></div>
                </div>
                <div class="visualClear">&nbsp;</div>
            </div>
        </tal:entries>
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

