<div class="c-widget c-widget--card app-widget__card c-widget__card--base c-widget--${context/UID}"
     i18n:domain="meetshaus.blog">
    <div class="c-widget__header c-widget__header--card">
        <div class="c-widget__title" i18n:translate="">
            Content Card Newsletter Subscription
        </div>
    </div>
    <div class="c-widget__content" tal:define="content python:view.widget_content()">
        <div class="c-card c-card--secondary c-card--newsletter-subscription">
            <div class="c-card__header">
                <div class="c-card__title">
                    Der Jahreszeitentisch Newsletter von meetshaus
                </div>
            </div>
            <div class="c-card__main">
                <div class="c-card__section">
                    <form class="o-form validate" action="https://meetshaus.us19.list-manage.com/subscribe/post?u=3ce0e483f58c91c06c1a9f320&amp;id=ed719bb987" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate>
                        <div class="o-form__section" id="mc_embed_signup_scroll">
                            <div class="o-form__group mc-field-group">
                                <label for="mce-EMAIL">E-Mail Addresse eintragen: </label>
                                <input type="email" value="" name="EMAIL" class="o-form__control--secondary required email" id="mce-EMAIL" placeholder="name@beispiel.tld">
                            </div>
                            <div id="mce-responses" class="clear">
                                <div class="response" id="mce-error-response" style="display:none"></div>
                                <div class="response" id="mce-success-response" style="display:none"></div>
                            </div> <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_3ce0e483f58c91c06c1a9f320_ed719bb987" tabindex="-1" value=""></div>
                            <div class="o-form__actions--newsletter clear">
                                <input class="button button--inverse" type="submit" value="Anmelden" name="subscribe" id="mc-embedded-subscribe">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="c-widget__footer">
    </div>
</div>
