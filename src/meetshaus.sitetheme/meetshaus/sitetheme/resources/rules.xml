<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    
    <xsl:template match="activity|add-profile-tab|bookmark|comments|friendpile|like|like-box|live-stream|login-button|pronoun|recommendations|serverFbml|profile-pic|user-status">
      <xsl:element name="fb:{local-name()}" xmlns:fb="http://www.facebook.com/2008/fbml">
        <xsl:apply-templates select="@*|node()"/>
      </xsl:element>
    </xsl:template>
    <xsl:template match="plusone">
      <xsl:element name="g:{local-name()}" xmlns:g="http://base.google.com/ns/1.0">
        <xsl:apply-templates select="@*|node()"/>
      </xsl:element>
    </xsl:template>
    
    <!-- The default theme, used for standard Plone web pages -->
    <!--<theme href="minimal.html" if-path="@@edit-tile" />
    <theme href="frontpage.html" css:if-content="body.section-front-page" />
    <theme href="contact.html" css:if-content="body.section-kontakt" />
    <theme href="impressum.html" css:if-content="body.section-impressum" />

    <theme href="references.html" css:if-content="body.template-references-listing" />

    <theme href="newtheme.html" css:if-content="body.section-blog" />
    <theme href="impressum.html" css:if-content="body.section-referenzen" />-->
    
    <!-- Rules applying to a standard Plone web page -->
    <rules css:if-content="#visual-portal-wrapper">
        <theme href="newtheme.html" />
        <notheme if="$ajax_load" />
        
        <notheme if="$host = 'cms.meetshaus.de'" />
        
        <before css:theme-children="body" css:content="#plone-cmsui-trigger" />
        <notheme css:if-content="#plone-cmsui-menu" />
        <notheme css:if-content="body.template-cmsui-add-content-form" />
        <notheme css:if-content="body.template-atct_edit" />
        
        
        <replace theme="/htm/head/title" content="/html/head/title" />
        <replace theme="/html/head/base" content="/html/head/base" />
        
        <!-- Add meta tags -->
        <drop theme="/html/head/meta" />
        <after content="/html/head/meta" theme-children="/html/head" />

        <!-- Drop styles in the head - these are added back by including them from Plone -->
        <drop theme="/html/head/link" />
        <drop theme="/html/head/style" />
        <drop theme="/html/head/script" />
        <drop theme="/html/head/comment()" />

        <after
            content="/html/head/base | /html/head/style | /html/head/script | /html/head/link | /html/head/comment()"
            theme-children="/html/head" />
        
            <after theme="/html/head">
                <link rel="shortcut icon" href="/++theme++meetshaus.sitetheme/images/favicon.ico" type="image/x-icon" />
            </after>
        <!-- replace over the id/class attributes on the body tag.
             This is important for per-section styling -->
        <merge attributes="class" css:content="body" css:theme="body" />
        <copy attributes="id dir" css:content="body" css:theme="body" />
            
        <!-- Logo (link target) -->
        <copy attributes="href" css:content='#portal-logo' css:theme="#logo" />
        
        <drop css:theme="#tree-decorator" css:if-content="#user-name" />

            
        <replace css:content="#infobar"
                css:theme="#contact-me"
                css:if-content="body.section-referenzen" />

        <rules css:if-content="body.section-front-page">
            <replace css:content="#introduction" css:theme="#about-me" />
            <replace css:content="#content-core" css:theme-children="#content-wrapper" />
        </rules>
        
        <replace css:content="#content-core > *" css:theme="#contact-me"
            css:if-content="body.section-impressum" />

        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-references-listing" />
        
        <!-- Splashboxes (Landing Page) -->
        
        <!--<replace css:content="#box-words" css:theme="#splashbox-words-content"
            css:if-content="body.section-front-page" />
        <replace css:content="#box-adwords" css:theme="#splashbox-adwords-content"
            css:if-content="body.section-front-page" />
        <replace css:content="#box-social" css:theme="#splashbox-social-content"
            css:if-content="body.section-front-page" />-->
        
        <!-- Content -->
        <replace css:content-children="#content" 
            css:theme-children="#content" />

        <replace css:content-children="#portal-column-one > *"
            css:theme-children="#sidebar" />

        <replace css:content-children="#portal-column-two > *"
            css:theme-children="#about-me" />
        
        <!-- Document Content
        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-edit" />
        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-atct_edit" />
        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-base_edit" />
        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-folder_contents" />
        <replace css:content="#content > *" css:theme="#content"
            css:if-content="body.template-folder_listing" />
        <replace css:content="#content > *" css:theme="#document-content"
            css:if-content="body.section-referenzen" />
        
        
        <replace css:content="#edit-bar" css:theme="#edit-bar" />
        <before css:content=".portalMessage" css:theme="#content" /> -->

        <after css:content-children="#viewlet-below-content"
            css:theme-children="#below-main-content" />
        
        <!-- Contact Form -->
        <replace css:content=".formid-kontakt" css:theme="#contact-me"
            css:if-content="body.section-kontakt" />
        
       <!-- <rules css:if-content="body.section-blog">
            <replace css:content="#content" css:theme="#content" />
            <after css:theme="#document-content" css:content="#viewlet-below-content" />
            <replace css:content-children="#portal-column-one > *" css:theme-children="#sidebar" />
            <replace css:content-children="#portal-column-two > *" css:theme-children="#sidebar" />
        </rules>
        
        <rules css:if-content="body.template-search">
            <replace css:content="#content > *" css:theme="#about-me" />
            <drop css:theme="#main-content" />
        </rules>-->

        
    </rules>

</rules>
