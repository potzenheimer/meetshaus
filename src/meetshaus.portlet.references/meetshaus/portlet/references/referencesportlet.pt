<dl class="portlet portletReferencesPortlet"
    i18n:domain="meetshaus.portlet.references"
    tal:define="pstate context/@@plone_portal_state;
                portal_url pstate/portal_url">
    <dt class="portletHeader">
        Referenzen
    </dt>
    <dd class="portletItem" tal:define="item view/selected_item">
        <h3><a href=""
                tal:attributes="href item/getRemoteUrl"
                tal:content="item/Title" />
        </h3>
        <p tal:content="item/Description" />
        <a href=""
            tal:attributes="href python:portal_url + '/referenzen'">
            Weitere Referenzen</a>
    </dd>
</dl>
